FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src

# Копируем файл проекта
COPY ["SimpleFirewall.csproj", "."]
RUN dotnet restore "SimpleFirewall.csproj"

# Копируем весь исходный код
COPY . .

# Собираем и публикуем приложение
RUN dotnet publish -c Release -o /app/publish

# Финальный образ
FROM mcr.microsoft.com/dotnet/runtime:6.0
WORKDIR /app

# Копируем собранное приложение
COPY --from=build /app/publish .

# Создаем папку для логов
RUN mkdir -p /app/logs

# Экспортируем порт веб-интерфейса
EXPOSE 8080

# Переменная окружения для определения работы в контейнере
ENV DOTNET_RUNNING_IN_CONTAINER=true

# Точка входа
ENTRYPOINT ["dotnet", "SimpleFirewall.dll"]
