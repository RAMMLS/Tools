FROM ubuntu:22.04

# Устанавливаем переменные окружения для избежания интерактивных диалогов
ENV DEBIAN_FRONTEND=noninteractive

# Обновляем и устанавливаем базовые пакеты
RUN apt-get update && apt-get install -y \
    wget \
    git \
    build-essential \
    software-properties-common \
    && rm -rf /var/lib/apt/lists/*

# Устанавливаем mingw-w64 для C++ кросс-компиляции
RUN apt-get update && apt-get install -y \
    mingw-w64 \
    && rm -rf /var/lib/apt/lists/*

# Устанавливаем Go
RUN wget https://golang.org/dl/go1.21.0.linux-amd64.tar.gz && \
    tar -C /usr/local -xzf go1.21.0.linux-amd64.tar.gz && \
    rm go1.21.0.linux-amd64.tar.gz
ENV PATH="/usr/local/go/bin:${PATH}"
ENV GOPATH=/go
ENV PATH="${GOPATH}/bin:${PATH}"

# Устанавливаем Wine для Python компиляции
RUN dpkg --add-architecture i386 && \
    apt-get update && apt-get install -y \
    wine \
    wine32 \
    wine64 \
    winetricks \
    && rm -rf /var/lib/apt/lists/*

# Настраиваем Wine
RUN winecfg /v && winetricks -q win7

# Устанавливаем Python под Wine
RUN wget https://www.python.org/ftp/python/3.9.7/python-3.9.7-amd64.exe -O /tmp/python.exe && \
    wine /tmp/python.exe /quiet InstallAllUsers=1 PrependPath=1 Include_test=0

# Устанавливаем PyInstaller под Wine
RUN wine pip install pyinstaller

# Создаем рабочую директорию
WORKDIR /workspace

# Копируем вспомогательные скрипты
COPY build.sh /usr/local/bin/build.sh
RUN chmod +x /usr/local/bin/build.sh

CMD ["/bin/bash"]
